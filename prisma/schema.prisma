// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  passwordHash String?      @map("password_hash")
  firstName    String       @map("first_name")
  lastName     String       @map("last_name")
  guestProfile Guest?
  connections  Connection[]

  @@map("users")
}

model Show {
  id              String    @id @default(uuid())
  title           String
  description     String?
  sceneCollection String    @default("me") @map("scene_collection")
  episodes        Episode[]
  archived        Boolean   @default(false)

  @@map("shows")
}

model Episode {
  id          String             @id @default(uuid())
  showId      String
  startDate   DateTime           @map("start_date")
  endDate     DateTime           @map("end_date")
  title       String
  subtitle    String?
  description String
  vdoPassword String             @default("its@ydrianB1ch") @map("vdo_password")
  createdAt   DateTime           @default(now()) @map("created_at")
  show        Show               @relation(fields: [showId], references: [id])
  guests      GuestsForEpisode[]

  @@map("episodes")
}

model Guest {
  id        String             @id @default(uuid())
  firstName String             @map("first_name")
  lastName  String             @map("last_name")
  title     String?
  company   String?
  twitter   String?
  avatarUrl String?            @map("avatarUrl")
  episodes  GuestsForEpisode[]
  userId    String?            @unique @map("user_id")
  user      User?              @relation(fields: [userId], references: [id])

  @@map("guests")
}

model GuestsForEpisode {
  episodeId String
  guestId   String
  order     Int
  episode   Episode @relation(fields: [episodeId], references: [id])
  guest     Guest   @relation(fields: [guestId], references: [id])

  @@id([episodeId, guestId])
  @@map("guests_episodes")
}

model Connection {
  id                  String  @id @default(uuid())
  userId              String
  type                String
  provider            String
  providerAccountId   String  @map("provider_account_id")
  providerDisplayName String? @map("provider_display_name")
  refreshToken        String? @map("refresh_token")
  accessToken         String? @map("access_token")
  expiresAt           Int?    @map("expires_at")
  tokenType           String? @map("token_type")
  scope               String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("connections")
}
